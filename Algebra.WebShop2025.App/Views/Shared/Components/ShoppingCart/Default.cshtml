@model Cart

<div class="text-center">
    <h1 class="display-4">Cart items</h1>
</div>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>Product</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>
                    <form method="POST" asp-action="RemoveFromCart">
                        <input type="hidden" name="productId" value="@item.Product.Id" />
                        <input type="submit" class="btn btn-sm btn-danger" value="Remove" />
                    </form>
                </td>
                <td>
                    @item.Product.Name
                </td>
                <td>
                    @item.Product.Price.ToString("0.00") €
                </td>
                <td>
                    @item.Quantity
                </td>
                <td>
                    @item.Total.ToString("0.00") €
                </td>
            </tr>
        }
        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td><b>Total price:</b></td>
            <td>
                @Model.GrandTotal.ToString("0.00") €
            </td>
        </tr>
    </tbody>
</table>

